<apex:page standardController="breadwinner_qbo__Payment__c" extensions="breadwinner_qbo.RecordInfoExtension" showHeader="false" applyHtmlTag="false">
    <apex:slds />
    <script src="{!URLFOR($Resource.Breadwinner_QBO, 'Breadwinner_QBO/JS/jquery-1.11.3.js')}">
    </script>
    <style>
        .slds-scope img {
            margin:35px 0px;
            padding-right: 10px;
        }
    </style>
    <apex:form >
        <div class="slds-scope" >
            <div class="slds-box">
                <table width="100%" border="0" cellpadding="0" cellspacing="0">
                    <tr>
                        <td style="width:200px">
                            <apex:image url="{!URLFOR($Resource.breadwinner_qbo__Breadwinner_QBO, 'Breadwinner_QBO/Images/BreadwinnerLogo.png')}" />
                        </td>
                        <td>
                            <apex:outputPanel rendered="{!daysOverdue>0}">
                                <apex:outputPanel rendered="{!OR(isAdministrator, daysOverdue > 7)}">
                                    <apex:outputPanel layout="block" style="color:{!If(daysOverdueSeverity=='WARNING','black','white')};border-radius: 4px;justify-content: left;font-weight:400" styleClass="slds-notify slds-notify_alert {!If(daysOverdueSeverity=='WARNING','slds-theme_warning','slds-theme_error')}  slds-text-align_left slds-text-heading_small slds-m-bottom_small">
                                        <p>{!summaryMessage}</p>
                                    </apex:outputPanel>                                
                                </apex:outputPanel>
                            </apex:outputPanel>
                            
                            <apex:outputPanel rendered="{!isUnderTrial}">
                                <ul class="slds-list_dotted ">
                                    <li class="slds-text-heading_small">These records only sync with QuickBooks Online if you have a Breadwinner subscription of Professional or Enterprise. You are able to see these records now because your free trial defaults to the Professional Edition of Breadwinner. If you subscribe to Breadwinner at the Basic level, you will not be able see these records anymore. This applies to the following objects: Payments, Payment Transactions, and Line Items.
                                    </li>
                                </ul>
                            </apex:outputPanel>
                            <ul class="slds-list_dotted ">
                                <li class="slds-text-heading_small slds-m-top_small">
                                    Do not add custom fields to this object, or lookups from or to this object, or Triggers or Workflows, as Breadwinner may need to delete/destroy this and any other Payment record during a regular sync with QuickBooks Online.
                                </li>
                            </ul>
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </apex:form>
</apex:page>