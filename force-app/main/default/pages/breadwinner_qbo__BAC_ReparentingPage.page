                        }
                        </script>
                    </apex:outputPanel>
                </apex:outputPanel>
                
            </apex:outputPanel>
            <apex:pageMessage summary="This page is not initialized properly."  severity="WARNING" rendered="{!NOT(initialized)}"/>
