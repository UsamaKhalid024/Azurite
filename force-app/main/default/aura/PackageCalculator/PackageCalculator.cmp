<aura:component controller="PackageCalculatorCtlr" implements="force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickAction">
	
    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />
    <aura:attribute name="total_days" type="Integer" default="1" />
    <aura:attribute name="total_days_2" type="Integer" default="1" />
    <aura:attribute name="startDate" type="date" />
    <aura:attribute name="startDate2" type="date" />
    <aura:attribute name="endDate" type="date" />
    <aura:attribute name="endDate2" type="date" />
    <aura:attribute name="showError" type="boolean" default="false" />
    <aura:attribute name="spinner" type="Boolean" default="false" />
    <aura:attribute name="recordId" type="String"  />
    <aura:attribute name="showSaveButton" type="Boolean" default="false" />
    
    <aura:html tag="style">
        .slds .modal-footer .slds-modal__footer {
        display:none;
        }
        div.modal-footer div.slds-modal__footer {
        display:none;
        }
        div.slds-modal__footer {
        display:none;
        }
        div.modal-footer {
        display:none;
        }
        footer{
        width: 100%;
        z-index: 1000;
        left: 0;
        right: 0;
        position:fixed;
        }
        .slds-modal__content{
        	max-height: calc(100vh - 200px) !important;
        }
        div.custom-half-container{
        	width:50% !important;
        }
        #oDate{
        	padding: 6px 186px 7px 13px !important; 
        	border: 1px solid #dddbda !important; 
        	width: 100% !important; 
        	border-radius: 5px !important;
        }
    </aura:html>
    <ltng:require scripts="{!$Resource.jqueryv341}" />
    <lightning:card>
        <div class="slds-grid slds-wrap">
            <div class="slds-col slds-size_6-of-12" style="padding: 0px 10px 0px 0px;">
                <div class="slds-grid slds-wrap">
                    <div class="slds-col slds-size_1-of-1">
                        <lightning:input type="date" aura:id="startdate" name="input2" label="Start Date" value="{!v.startDate}" />
                        <aura:if isTrue="{!v.showError}">
                            <ui:message title="Error" severity="error" closable="true">
                                Start Date must be the previous date from End Date.
                            </ui:message>
                        </aura:if>
                    </div>
                    <div class="slds-col slds-size_1-of-1">
                        <lightning:input min="1" type="number" name="input2" label="Days in Package" value="{!v.total_days}" />
                    </div>
                    <div class="slds-col slds-size_1-of-1">
                        <!--<lightning:input type="date" aura:id="enddate" name="input2" disabled="true" label="End Date" value="{!v.endDate}" />-->
                        <label class="slds-form-element__label" for="text-input-id-1" id="inline-text-label" style="margin-bottom: 3px;">End Date</label>
                        <br/>
                        <div style="padding: 6px 186px 7px 13px; border: 1px solid #dddbda; width: 100%; border-radius: 5px; background: #ededed;">
                            <ui:outputDate aura:id="oDate" value="{!v.endDate}" format="d/MM/YYYY"/>
                        </div>
                    </div>
                </div>
            </div>
            <div class="slds-col slds-size_6-of-12" style="padding: 0px 0px 0px 10px;">
                <div class="slds-grid slds-wrap">
                    <div class="slds-col slds-size_1-of-1">
                        <lightning:input type="date" aura:id="startdate2" name="input2date" label="Start Date 2" value="{!v.startDate2}" />
                        <aura:if isTrue="{!v.showError}">
                            <ui:message title="Error" severity="error" closable="true">
                                Start Date must be the previous date from End Date.
                            </ui:message>
                        </aura:if>
                    </div>
                    <div class="slds-col slds-size_1-of-1">
                        <lightning:input min="1" type="number" name="input2" label="Days in Package" value="{!v.total_days_2}" />
                    </div>
                    <div class="slds-col slds-size_1-of-1">
                        <label class="slds-form-element__label" for="text-input-id-1" id="inline-text-label" style="margin-bottom: 3px;">End Date</label>
                        <br/>
                        <div style="padding: 6px 186px 7px 13px; border: 1px solid #dddbda; width: 100%; border-radius: 5px; background: #ededed;">
                            <ui:outputDate aura:id="" value="{!v.endDate2}" format="d/MM/YYYY"/>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <footer class="modal-footer slds-modal__footer attach-to-bottom" style="margin-top:10px;">
            <lightning:button  label="Calculate" title="Calculate" onclick="{!c.calculate}" />
            <aura:if isTrue="{!v.showSaveButton}">
                <lightning:button variant="brand" label="Save" title="Save" onclick="{!c.saveRecord}" />
            </aura:if>
        </footer>
    </lightning:card>
    <!-- <<<<<<<<<< Spinner >>>>>>>>>> -->
    <aura:if isTrue="{!v.spinner}">
        <div class="demo-only demo--inverse" style="height: 6rem;">
            <div class="slds-spinner_container slds-is-fixed">
                <div role="status" class="slds-spinner slds-spinner_medium">
                    <span class="slds-assistive-text">Loading</span>
                    <div class="slds-spinner__dot-a"></div>
                    <div class="slds-spinner__dot-b"></div>
                </div>
            </div>
        </div>
    </aura:if>
    <!-- <<<<<<<<<< / Spinner >>>>>>>>>> -->
</aura:component>