                                            <th><span><b>Start Date</b></span></th>
                                            <th><span><b>End Date</b></span></th>
                                            <th><span><b>Session Days</b></span></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <aura:iteration items="{!v.SessionsInfo}" var="info" indexVar="indx">
                                            <tr>
                                                <td><ui:outputText value="{!indx + 1}"/></td>
                                                <td><ui:outputText value="{!info.Hospital__r.Name}"/></td>
                                                <td><ui:outputText value="{!info.Doctor__r.Firstname}"/> <ui:outputText value="{!info.Doctor__r.LastName}"/></td>
