                                                <td><ui:outputCurrency currencySymbol="{!info.CurrencyIsoCode}" value="{!info.Medical_Balance__c}"/></td>
                                                <td><ui:outputDate value="{!info.Start_Date__c}" /></td>
                                                <td><ui:outputDate value="{!info.End_Date__c}" /></td>
