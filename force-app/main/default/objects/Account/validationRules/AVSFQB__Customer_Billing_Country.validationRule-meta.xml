<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>AVSFQB__Customer_Billing_Country</fullName>
    <active>true</active>
    <errorConditionFormula>IF( ISNULL($User.AVSFQB__DBSync_Id__c) ,IF(LEN( BillingCountry ) &gt; 31,true,false),IF(LEN( BillingCountry ) &gt; 255,true,false))</errorConditionFormula>
